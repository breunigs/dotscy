! Reload this with “xrdb -merge .Xdefaults”.

XTerm*foreground: grey
XTerm*pointerColor: SpringGreen
! No really, this should be the standard.
XTerm*metaSendsEscape: true

xterm*termName: xterm-256color

xterm*background: rgb:24/24/24
xterm*color0:     rgb:00/00/00
xterm*color1:     rgb:c7/56/46
xterm*color2:     rgb:8e/b3/3b
xterm*color3:     rgb:d0/b0/3c
xterm*color4:     rgb:72/b3/cc
xterm*color5:     rgb:c8/a0/d1
xterm*color6:     rgb:21/86/93
xterm*color7:     rgb:b0/b0/b0
xterm*color8:     rgb:5d/5d/5d
xterm*color9:     rgb:e0/96/90
xterm*color10:    rgb:cd/ee/69
xterm*color11:    rgb:ff/e3/77
xterm*color12:    rgb:9c/d9/f0
xterm*color13:    rgb:fb/b1/f9
xterm*color14:    rgb:77/df/d8
xterm*color15:    rgb:f7/f7/f7



! Fade out the text when terminal is not focused.
URxvt.fading: 30

! Tiny scroll bar at the right side.
URxvt.scrollstyle: plain
URxvt.scrollBar_right: true
! Do not scroll while in buffer, even on output, except if I press a key.
URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: false
URxvt.scrollTtyKeypress: true
! Huge scrollback buffer.
URxvt.saveLines: 10000

! Make it old-school.
URxvt.cursorBlink: true

! Open login shells.
URxvt.loginShell: true

! Sorry Vim, 8th bit meta is just broken.
URxvt.meta8: false

! Disable Perl extensions for now, I do not actively use them
URxvt.perl-ext:
URxvt.perl-ext-common:

! Colors!
URxvt.cursorColor: SpringGreen
URxvt.cursorColor2: black
URxvt.pointerColor: SpringGreen
URxvt.scrollColor: #8888AA
! 0: black, 1: red, 2: green, 3: yellow, 4: blue, 5: magenta, 6: cyan, 7: white
URxvt.background: #000000
URxvt.color0:     #000000
URxvt.color8:     #666666
URxvt.color1:     #9c0804
URxvt.color9:     #e80e07
URxvt.color2:     #5c991c
URxvt.color10:    #7bcc25
URxvt.color3:     #ffa929
URxvt.color11:    #fff129
URxvt.color4:     #003687
URxvt.color12:    #0063f7
URxvt.color5:     #4f0035
URxvt.color13:    #cf008a
URxvt.color6:     #06767a
URxvt.color14:    #0abcc2
URxvt.foreground: #bebebe
URxvt.color7:     #bebebe
URxvt.color15:    #ffffff

! Default font.
URxvt.font: -misc-fixed-medium-r-semicondensed-*-13-*-*-*-*-*-iso10646-*
URxvt.boldFont: -misc-fixed-bold-r-semicondensed-*-13-*-*-*-*-*-iso10646-*
URxvt.italicFont: -misc-fixed-medium-o-semicondensed-*-13-*-*-*-*-*-iso10646-*

